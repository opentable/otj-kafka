<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">

    <modelVersion>4.0.0</modelVersion>
    <packaging>pom</packaging>
    <parent>
        <groupId>com.opentable</groupId>
        <artifactId>otj-parent-spring</artifactId>
        <version>9999-SNAPSHOT</version>
    </parent>

    <scm>
        <connection>scm:git:git://github.com/opentable/otj-kafka.git</connection>
        <developerConnection>scm:git:git@github.com:opentable/otj-kafka.git</developerConnection>
        <url>http://github.com/opentable/otj-kafka</url>
        <tag>HEAD</tag>
    </scm>

    <properties>
        <dep.otj-core.version>5.2.0-SNAPSHOT</dep.otj-core.version>
        <dep.otj-jvm.version>5.2.0-SNAPSHOT</dep.otj-jvm.version>
        <dep.otj-scopes.version>5.2.0-SNAPSHOT</dep.otj-scopes.version>
        <dep.otj-spring.version>5.2.0-SNAPSHOT</dep.otj-spring.version>
        <dep.otj-httpheaders.version>5.2.0-SNAPSHOT</dep.otj-httpheaders.version>
        <dep.otj-logging.version>5.2.0-SNAPSHOT</dep.otj-logging.version>
        <dep.otj-executors.version>5.2.0-SNAPSHOT</dep.otj-executors.version>
        <dep.otj-conservedheaders.version>5.2.0-SNAPSHOT</dep.otj-conservedheaders.version>
        <dep.otj-metrics.version>5.2.0-SNAPSHOT</dep.otj-metrics.version>
        <dep.otj-jaxrs.version>5.2.0-SNAPSHOT</dep.otj-jaxrs.version>
        <dep.otj-jackson.version>5.2.0-SNAPSHOT</dep.otj-jackson.version>
        <dep.otj-filterorder.version>5.2.0-SNAPSHOT</dep.otj-filterorder.version>
        <dep.otj-pausedetector.version>5.2.0-SNAPSHOT</dep.otj-pausedetector.version>
        <dep.otj-server.version>5.2.0-SNAPSHOT</dep.otj-server.version>
        <dep.otj-webclient.version>5.2.0-SNAPSHOT</dep.otj-webclient.version>
        <!-- Open source requires JavaDocs -->
        <basepom.oss.skip-scala-doc>true</basepom.oss.skip-scala-doc>
        <basepom.check.skip-javadoc>false</basepom.check.skip-javadoc>
        <basepom.check.fail-javadoc>false</basepom.check.fail-javadoc>
        <dep.curator.version>4.2.0</dep.curator.version>

    </properties>

    <groupId>com.opentable.components</groupId>
    <artifactId>otj-kafka-parent</artifactId>
    <version>5.2.0-SNAPSHOT</version>
    <description>Kafka integrations component (parent)</description>

    <dependencyManagement>
        <dependencies>
            <!-- the usual multi module declarations -->
            <dependency>
                <groupId>com.opentable.components</groupId>
                <artifactId>otj-kafka</artifactId>
                <version>${project.version}</version>
            </dependency>
            <dependency>
                <groupId>com.opentable.components</groupId>
                <artifactId>otj-kafka-streams</artifactId>
                <version>${project.version}</version>
            </dependency>
            <dependency>
                <groupId>com.opentable.components</groupId>
                <artifactId>otj-kafka-tests</artifactId>
                <version>${project.version}</version>
            </dependency>
            <!-- used in otj-kafka-tests -->
            <dependency>
                <groupId>org.apache.curator</groupId>
                <artifactId>curator-test</artifactId>
                <version>${dep.curator.version}</version>
                <exclusions>
                    <exclusion>
                        <groupId>com.google.guava</groupId>
                        <artifactId>guava</artifactId>
                    </exclusion>
                </exclusions>
            </dependency>

        </dependencies>
    </dependencyManagement>

    <modules>
        <module>otj-kafka</module>
        <module>otj-kafka-streams</module>
        <module>otj-kafka-tests</module>
        <module>otj-kafka-mirrormaker</module>
        <module>otj-kafka-spring</module>
    </modules>
</project>
